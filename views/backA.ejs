<%- include backTop %>
<div class="Right" id="Right">
    <div class="Details">
        <form class="search" action="/backA" method="POST">
            <input type="text" placeholder="输入手机号" name="Phone" />
            <button class="btn" type="submit">搜索</button>
        </form>
        <div class="table_div">
            <% if(datas.length) { %>
            <table class="table">
                <thead>
                    <tr>
                        <th class="">ID</th>
                        <th class="">手机号</th>
                        <th>时间</th>
                        <th class="">已消行数</th>
                        <th class="">分数</th>
                        <th class="">删除</th>
                    </tr>
                </thead>
                <form class="search" action="/backA_2" method="POST">
                    <tbody>
                        <% for(var i=0;i< datas.length;i++){ %>
                        <tr>
                            <td ><%= datas[i].or_Id %></td>
                            <td ><%= datas[i].Phone %></td>
                            <td><%= datas[i].Time %></td>
                            <td ><%= datas[i].Line %></td>
                            <td ><%= datas[i].Score %></td>
                            <td ><input type="submit"  name='or_Id' value='<%= datas[i].or_Id %>'/></td>
                        </tr>
                        <% }%>
                    </tbody>
                </form>
            </table>
            <% }else{ %>
            <p class="msg"><%= msg %></p>
            <% } %>
        </div>
    </div>
</div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        var left_li = $(".Left ul li:eq(1)"),
            left_a = $(".Left ul li:eq(1) a");
        left_li.css("border-left", "1px solid red");
        left_a.css("color", "red");
        $(".table tbody tr:odd").css("backgroundColor", "#E3F2F5");
    });
</script>
</body>

</html>